generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}


model Mortgage {
  id              String      @id @default(uuid())
  monthlyIncome   Decimal     @map("monthly_income")
  monthlyDebts    Decimal     @map("monthly_debts")
  loanAmount      Decimal     @map("loan_amount")
  propertyValue   Decimal     @map("property_value")
  creditScore     Int         @map("credit_score")
  debtToIncome    Decimal     @map("debt_to_income")
  loanToValue     Decimal     @map("loan_to_value")
  status          MortgageStatus
  occupancyType   String      @map("occupancy_type")
  reasons         String[]    @map("reasons")
  createdAt       DateTime    @default(now()) @map("created_at")

  @@map("mortgage")
}

enum MortgageStatus {
  APPROVED
  REFER
  DECLINE
}